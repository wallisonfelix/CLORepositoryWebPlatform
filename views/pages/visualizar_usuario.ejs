<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<% include ../partials/head %>
</head>

<body style="background-color: #fffffa;">
	<% include ../partials/page_header %>

	<div class="container">
	  <% include ../partials/header %>

	  <div class="row">
	    <div id="menu" class="col-sm-3">
	    	<% include ../partials/menu %>
	    </div>	    	

	    <!-- Page Content -->
	    <div class="col-sm-9">
	    	<ol class="breadcrumb">
			  <li>Home</li>
			  <li>Administração</li>
			  <li>Gerenciar Usuários</li>
			  <li class="active">Visualizar Usuário</li>
			</ol>

			<% include ../partials/messages %>

			<form role="form" class="form-horizontal" accept-charset="UTF-8" id="formData">
	      		
	      		<div class="form-group">
    				<label class="control-label col-sm-3">Nome :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= user.name %></span>
    				</div>
	      		</div>

				<div class="form-group">
    				<label class="control-label col-sm-3">Email :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= user.email %></span>
    				</div>
	      		</div>

	      		<div class="form-group">
    				<label class="control-label col-sm-3">Login :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= user.login %></span>
    				</div>
	      		</div>
	      		
	      		<div class="form-group">
    				<label class="control-label col-sm-3">Perfil :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= user.profile %></span>
    				</div>
	      		</div>

	      		<div class="form-group">
    				<label class="control-label col-sm-3">Grau de Liberdade :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= user.degree_of_freedom %></span>
    				</div>
	      		</div>


				<div id="roles">
					<h4>Papéis:</h4>
					<table class="table table-striped table-responsive">
					    <thead>
					      	<tr>
					        	<th class="text-center">Nome</th>
					        	<th class="text-center">Código</th>
					        	<th class="text-center">Descrição</th>
					      	</tr>
					    </thead>
					    <tbody>
					    <% if (userRoles) {
							for(var i = 0; i < userRoles.length; i++) { %>
					      		<tr>					      			
						        	<td class="text-left"><%= userRoles[i].name %></td>
						        	<td class="text-center"><%= userRoles[i].code %></td>
						        	<td class="text-left"><%= userRoles[i].description %></td>
				      			</tr>
					      	<%	} 
					    	} %>
					    </tbody>
					</table>

					<% if(!userRoles || userRoles.length == 0) { %>
						<div class="alert alert-warning fade in">
							Nenhum Papel retornado
						</div>
					<% } %>	

				</div>

				<div class="form-group">
					<div class="col-sm-12">
					</div>	
				</div>
			</form>
	      	
	    </div>
	  </div>

	</div>

	<% include ../partials/page_footer %>
</body>

</html>