<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<% include ../partials/head %>
</head>

<body style="background-color: #fffffa;">
	<% include ../partials/page_header %>

	<div class="container">
	  <% include ../partials/header %>

	  <div class="row">
	    <div id="menu" class="col-sm-3">
	    	<% include ../partials/menu %>
	    </div>	    	

	    <!-- Page Content -->
	    <div class="col-sm-9">
	    	<ol class="breadcrumb">
			  <li>Home</li>
			  <li>Administração</li>
			  <li>Gerenciar Papéis</li>
			  <li class="active">Visualizar Papel</li>
			</ol>

			<% include ../partials/messages %>

			<form role="form" class="form-horizontal" accept-charset="UTF-8" id="formData">
	      		
	      		<div class="form-group">
    				<label class="control-label col-sm-3">Nome :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= role.name %></p>
    				</div>
	      		</div>

				<div class="form-group">
    				<label class="control-label col-sm-3">Código :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= role.code %></p>
    				</div>
	      		</div>

	      		<div class="form-group">
    				<label class="control-label col-sm-3">Descrição :</label>
    				<div class="col-sm-9">
    					<p class="form-control-static"><%= role.description %></p>
    				</div>
	      		</div>

				<div id="operations">
					<h4>Operações:</h4>
					<table class="table table-striped table-responsive">
					    <thead>
					      	<tr>
					        	<th class="text-center">Nome</th>
					        	<th class="text-center">Código</th>
					        	<th class="text-center">Descrição</th>
					      	</tr>
					    </thead>
					    <tbody>
					    <% if (roleOperations) {
							for(var i = 0; i < roleOperations.length; i++) { %>
					      		<tr>					      			
						        	<td class="text-left"><%= roleOperations[i].name %></td>
						        	<td class="text-center"><%= roleOperations[i].code %></td>
						        	<td class="text-left"><%= roleOperations[i].description %></td>
				      			</tr>
					      	<%	} 
					    	} %>
					    </tbody>
					</table>

					<% if(!roleOperations || roleOperations.length == 0) { %>
						<div class="alert alert-warning fade in">
							Nenhuma Operação retornada
						</div>
					<% } %>	

				</div>

				<div class="form-group">
					<div class="col-sm-12">
						<% if (authenticatedUser && operationCodes.indexOf('editar_papel') != -1) { %>	
							<a href="/editar_papel?idRole=<%=role.id%>" class="btn btn-info" role="button">Editar</a>
						<% } %>	
						<% if (authenticatedUser && operationCodes.indexOf('pesquisar_papel') != -1) { %>	
							<a href="/pesquisar_papel" class="btn btn-link" role="button">Pesquisar</a>
						<% } %>	
					</div>	
				</div>
			</form>
	      	
	    </div>
	  </div>

	</div>

	<% include ../partials/page_footer %>
</body>

</html>